{% extends 'base.html.twig' %}

{% block container %}

    <h1>Mes produits ({{ products|length }}) | <a href="{{path('app_product_new')}}" class="btn btn-sm btn-primary">Créer un produit</a></h1>
    <div class="row">
    {% for product in products %}
        
            <div class="col-4 mt-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{product.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">Prix : {{product.price}}€</h6>
                        <p class="card-text">{{product.description}}</p>
                        <a href="{{path('app_product_show',{id: product.id})}}" class="card-link">Afficher le produit</a>
                        <a href="{{path('app_product_add_to_cart',{id: product.id})}}" class="card-link">Ajouter au panier</a>
                    </div>
                </div>
            </div>
    {% endfor %}
    </div>

{% endblock %}