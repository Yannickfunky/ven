{% extends 'base.html.twig' %}

{% block title %}Connexion !{% endblock %}

{% block container %}

<div class="examp-wrapper">
<h1>Se connecter ✅  </h1>
<br>

{% if error %}
    <p class="text-danger">{{error.messageKey}}</p>
{% else %}
    <p class="text-sucess">Connexion réussie !</p>
{% endif %}


<form action="{{path('app_login')}}" method='post'>
   <input type="text" name="_username" value="{{ lastUsername }}" placeholder="Entrez votre email" class="form-control">
   <input type="password" name="_password" placeholder="Mot de passe" class="form-control">
    <button type="submit" class="btn btn-primary">Connexion</button>

    </form>

<br>

<h2>
    <p>Pas encore inscrit ? <a href="{{ path('app_create_utilisateur') }}">Inscrivez-vous</a></p>
</h2>


    
    </div>

{% endblock %}








