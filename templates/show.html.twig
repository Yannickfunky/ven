{% extends 'base.html.twig' %}

{% block container %}

<h1>{{product.name}}</h1>

<p>Prix : {{product.price}}€</p>
<p>{{product.description}}</p>

<a href="{{path('app_product')}}" class="btn btn-sm btn-primary">Retour à la page produit</a>
<a href="{{path('app_panier')}}" class="btn btn-sm btn-primary">Retour au panier</a>
<a href="{{ path('app_product_add_to_cart', { id: product.id }) }}" class="btn btn-primary">Ajouter au panier</a>

{% endblock %}